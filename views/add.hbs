<h1>Добавить курс</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Необходимо указать название" data-success="right">Введите название курса</span>
    </div>
    <div class="input-field">
        <input id="price" type="number" name="price" class="validate" required min="10">
        <label for="price">Цена</label>
        <span class="helper-text" data-error="Необходимо указать цену" data-success="right">Введите название цену</span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text">
        <label for="img">Картинка</label>
    </div>

    <button type="submit" class="btn btn-primary">Добавить курс</button>
</form>